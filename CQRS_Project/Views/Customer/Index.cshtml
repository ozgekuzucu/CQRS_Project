@model List<CQRS_Project.CQRS.Results.CustomerResults.GetCustomerQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Müşteri Listesi</h4>
                        <table class="table">
                            <tr>
                                <th>#</th>
                                <th>Ad Soyad</th>
                                <th>Email</th>
                                <th>Telefon</th>
                                <th>Sürücü Belge No</th>
                                <th>Oluşturulma Tarihi</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.CustomerId</td>
                                    <td>@item.FullName</td>
                                    <td>@item.Email</td>
                                    <td>@item.Phone</td>
                                    <td>@item.DrivingLicenseNo</td>
                                    <td>@item.CreatedDate.ToString("dd.MM.yyyy")</td>
                                    <td>
                                        <a href="/Customer/DeleteCustomer/@item.CustomerId"
                                           class="btn btn-danger btn-rounded btn-sm">Sil</a>
                                    </td>
                                    <td>
                                        <a href="/Customer/UpdateCustomer/@item.CustomerId"
                                           class="btn btn-success btn-rounded btn-sm">Güncelle</a>
                                    </td>
                                </tr>
                            }
                        </table>
                        <br />
                        <a href="/Customer/CreateCustomer/" class="btn btn-info btn-rounded btn-sm">Yeni Müşteri Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- footer -->
    <footer class="footer">
        <div class="footer-inner-wraper">
            <div class="d-sm-flex justify-content-center justify-content-sm-between">
                <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">
                    Copyright © bootstrapdash.com 2020
                </span>
                <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">
                    Free <a href="https://www.bootstrapdash.com/" target="_blank">Bootstrap dashboard templates</a>
                    from Bootstrapdash.com
                </span>
            </div>
        </div>
    </footer>
</div>





