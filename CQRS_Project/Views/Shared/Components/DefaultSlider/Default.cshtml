@model List<CQRS_Project.CQRS.Results.SliderResults.GetSliderQueryResult>

<div class="header-carousel">
    <div id="carouselId" class="carousel slide" data-bs-ride="carousel" data-bs-interval="false">
        <ol class="carousel-indicators">
            @for (int i = 0; i < Model.Count; i++)
            {
                <li data-bs-target="#carouselId" data-bs-slide-to="@i"
                    class="@(i == 0 ? "active" : "")"
                    aria-label="Slide @(i + 1)">
                </li>
            }
        </ol>

        <div class="carousel-inner" role="listbox">
            @for (int i = 0; i < Model.Count; i++)
            {
                var slider = Model[i];
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <img src="@slider.ImageUrl" class="img-fluid w-100" alt="@slider.Title" />
                    <div class="carousel-caption">
                        <div class="container py-4">
                            <div class="row g-5">
                                <div class="col-lg-6 fadeInLeft animated" data-animation="fadeInLeft" data-delay="1s" style="animation-delay: 1s;">
                                    @await Component.InvokeAsync("DefaultReservation")
                                </div>
                                <div class="col-lg-6 d-none d-lg-flex fadeInRight animated"
                                     data-animation="fadeInRight"
                                     data-delay="1s"
                                     style="animation-delay: 1s;">
                                    <div class="text-start">
                                        <h1 class="display-5 text-white">@slider.Title</h1>
                                        <p>@slider.Description</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
